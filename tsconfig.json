{
  "compilerOptions": {
    "noImplicitAny": false,  // This allows variables to be implicitly of type `any` without errors.
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.js", "sanity/schemas/newsmeldung.js", "sanity/deskStructure.js", "src/app/admin/[[...index]]/page.js", "src/app/admin/[[...index]]/Studio.js", "src/app/admin/layout.js", "sanity/schemas/index.js"],
  "exclude": ["node_modules"]
}
